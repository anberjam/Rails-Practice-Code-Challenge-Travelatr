<h1> Create a New Blogger </h1>

<% if flash[:errors] %>
   <% flash[:errors].each do |error| %>
    <%=    error %>
    <% end %> 
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br>
<%= f.label :bio %>
<%= f.text_area :bio %><br>
<%= f.label :age %>
<%= f.number_field :age %>
<%= f.submit %>
<% end %>