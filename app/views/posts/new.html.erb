<% if flash[:errors] %>
   <% flash[:errors].each do |error| %>
    <%=    error %>
    <% end %> 
<% end %>

<%= form_for @post do |p| %>
<%= p.label :title %>
<%= p.text_field :title %> <br>
<%= p.label :content %>
<%= p.text_area :content %><br>
<%= p.label :likes %>
<%= p.number_field :likes %><br>
<%= p.label :blogger_id %>
<%= p.collection_select :blogger_id, Blogger.all, :id, :name%><br>
<%= p.label :destination_id %>
<%= p.collection_select :destination_id, Destination.all, :id, :name %> <br>
<%= p.submit %>
<% end %>